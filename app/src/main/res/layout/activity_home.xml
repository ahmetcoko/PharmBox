<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/user" />

                <Button
                    android:id="@+id/sign_outBtn"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Sign Out" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Horizontal LinearLayout to make bmiTextView and bmiImageView adjacent -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/bmiTextView"
                        android:layout_width="158dp"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="BMI Value"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/bmiImageView"
                        android:layout_width="35dp"
                        android:layout_height="40dp"
                        android:src="@drawable/bmi"
                        android:onClick="bmiClick"/> <!-- Make sure to replace with your actual drawable resource -->
                </LinearLayout>

                <!-- Other existing content remains the same -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/usernameTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Name"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/userHeightTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Height"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userAgeTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Age"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/userWeightTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Weight"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="PAST MEDICINES"
            android:textStyle="bold"/>

        <!-- Placeholder for Past Medicines -->
        <!-- ImageView or RecyclerView can be added here -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="FAVORITES"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/favoritesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:scrollbars="horizontal">
            <!-- Dynamically added favorite items will go here -->
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="ALLERGIES"
            android:textStyle="bold"/>

        <!-- Placeholder for Allergies -->
        <!-- ImageView or RecyclerView can be added here -->

        <com.ismaeldivita.chipnavigation.ChipNavigationBar
            android:id="@+id/bottomMenu"
            android:layout_width="match_parent"
            android:layout_marginTop="390dp"
            android:layout_height="70dp"
            android:background="@drawable/bottom_background"
            app:cnb_backgroundColor="@color/blue"
            app:cnb_iconColor="@color/blue"
            app:cnb_iconSize="20dp"
            app:cnb_menuResource="@menu/bottom_menu"
            app:cnb_radius="50dp"
            app:cnb_unselectedColor="#ffffff" />
    </LinearLayout>
</ScrollView>

